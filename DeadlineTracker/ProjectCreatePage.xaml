<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DeadlineTracker.ProjectCreatePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Projektin luonti">

    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#fff7ff, Dark=#1b1b1f}" />
            <Setter Property="BorderColor" Value="{DynamicResource SecondaryTextColor}" />
        </Style>
        <Style TargetType="Label" x:Key="SectionTitle">
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <Grid Padding="20" RowSpacing="16" ColumnDefinitions="*"
              RowDefinitions="Auto,Auto,Auto,*,Auto">

            <!-- Otsikko -->
            <Label Text="Projektin luonti" FontSize="24" FontAttributes="Bold" />

            <!-- Projektin nimi -->
            <Grid Grid.Row="1" RowDefinitions="Auto,Auto" Margin="0,6,0,0">
                <Label Text="Projektin nimi"
                   Style="{StaticResource SectionTitle}"
                   Margin="6,0,0,6"/>   
                <Frame Grid.Row="1">
                    <Entry Placeholder="Esim. Projekti 1"/>
                </Frame>
            </Grid>

            <!-- Kuvaus -->
            <Grid Grid.Row="2" RowDefinitions="Auto,Auto" Margin="0,6,0,0">
                <Label Text="Kuvaus"
                   Style="{StaticResource SectionTitle}"
                   Margin="6,0,0,6"/>
                <Frame Grid.Row="1">
                    <Editor Placeholder="Supporting line text lorem ipsum..."
                AutoSize="TextChanges"/>
                </Frame>
            </Grid>

            <!-- Kaksi saraketta: Tehtävät & Osallistujat -->
            <Grid Grid.Row="3" ColumnDefinitions="*,*" ColumnSpacing="16">

                <!-- TEHTÄVÄT -->
                <Grid Grid.Column="0" RowDefinitions="Auto,Auto">
                    <!-- Otsikko + + -nappi otsikon rivillä -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                        <Label Text="Tehtävät"
                   Style="{StaticResource SectionTitle}"
                   Margin="6,0,0,6"/>
                        <Button Grid.Column="1" Text="+" WidthRequest="36" HeightRequest="36" />
                    </Grid>

                    <!-- Kehyksen sisällä vain sisältö -->
                    <Frame Grid.Row="1">
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="32,*,Auto" Padding="6">
                                <CheckBox />
                                <Label Grid.Column="1" Text="Esimerkkitehtävä" VerticalOptions="Center" />
                                <Image Grid.Column="2" Source="dots_vertical.png" WidthRequest="18" HeightRequest="18" />
                            </Grid>
                            <BoxView HeightRequest="1" Opacity="0.25" BackgroundColor="{DynamicResource SecondaryTextColor}" />
                            <Grid ColumnDefinitions="32,*,Auto" Padding="6">
                                <CheckBox />
                                <Label Grid.Column="1" Text="Toinen tehtävä" VerticalOptions="Center" />
                                <Image Grid.Column="2" Source="dots_vertical.png" WidthRequest="18" HeightRequest="18" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- OSALLISTUJAT -->
                <Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                        <Label Text="Osallistujat"
                   Style="{StaticResource SectionTitle}"
                   Margin="6,0,0,6"/>
                        <Button Grid.Column="1" Text="+" WidthRequest="36" HeightRequest="36" />
                    </Grid>

                    <Frame Grid.Row="1">
                        <!-- Pelkkä sisältö kehyksen sisään -->
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" Padding="6" RowSpacing="8">
                            <Label Text="Käyttäjä 1" />
                            <Label Grid.Column="1" Text="Projektipäällikkö" FontAttributes="Italic" />
                            <BoxView Grid.Row="0" Grid.ColumnSpan="2" HeightRequest="1" Margin="0,24,0,0"
                                Opacity="0.25" BackgroundColor="{DynamicResource SecondaryTextColor}" />
                            <Label Grid.Row="1" Text="Käyttäjä 3" />
                            <Label Grid.Row="1" Grid.Column="1" Text="jäsen" FontAttributes="Italic" />
                            <Label Grid.Row="2" Text="Käyttäjä 7" />
                            <Label Grid.Row="2" Grid.Column="1" Text="jäsen" FontAttributes="Italic" />
                        </Grid>
                    </Frame>
                </Grid>
            </Grid>

            <!-- Toimintopainikkeet (ei logiikkaa vielä) -->
            <Grid Grid.Row="4" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                <Label />
                <Button Grid.Column="1" Text="Peruuta" />
                <Button Grid.Column="2" Text="Tallenna projekti" />
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>