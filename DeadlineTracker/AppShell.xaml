<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DeadlineTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DeadlineTracker"
    Shell.FlyoutBehavior="Disabled"
    Title="DeadlineTracker">

    <!-- Kirjautumissivu (aloitusnäkymä) -->
    <ShellContent
        Title="Kirjautuminen"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="LoginPage" />

    <!-- Päänäkymä kirjautumisen jälkeen -->
    <ShellContent
        Title="Yleisnäkymä"
        ContentTemplate="{DataTemplate local:Yleisnakyma}"
        Route="Home" />

    <!-- Projektin / tehtävän luonti -->
    <ShellContent
        Title="Uusi projekti"
        ContentTemplate="{DataTemplate local:ProjectCreatePage}"
        Route="ProjectCreate" />

</Shell>
