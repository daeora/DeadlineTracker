<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeadlineTracker.Yleisnakyma"
             BackgroundColor="#F5F5F5">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Grid Padding="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label 
                x:Name="TervetuloaTeksti"
                FontSize="24"
                VerticalOptions="Start" 
                HorizontalOptions="Start"
                TextColor="Black"
                Grid.Column="0"/>
            <Button 
                x:Name="LogOut"
                Text="Kirjaudu ulos"
                HorizontalOptions="End"
                VerticalOptions="Start"
                BackgroundColor="Black"
                TextColor="White"
                CornerRadius="10"
                Padding="10,5"
                Grid.Column="2"
                Clicked="LogOut_Clicked"/>
        </Grid>
        <Label 
            Text="Yleisnäkymä"
            FontSize="28"
            FontAttributes="Bold"
            TextColor="Black"
            HorizontalOptions="Start"/>

        <ScrollView>
            <FlexLayout Direction="Row"
                        Wrap="Wrap"
                        JustifyContent="Start"
                        BindableLayout.ItemsSource="{Binding Projects}">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <!-- Näytetään eri sisältö riippuen IsAddButton-arvosta, nappi on yhden projektikortin paikalla siis -->
                        <ContentView>
                            <ContentView.Triggers>
                                <DataTrigger TargetType="ContentView"
                                             Binding="{Binding IsAddButton}"
                                             Value="True">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Frame WidthRequest="260"
                                                   HeightRequest="250"
                                                   Margin="10"
                                                   BorderColor="Transparent"
                                                   CornerRadius="12"
                                                   BackgroundColor="#f5f5f5"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="Center">
                                                <VerticalStackLayout VerticalOptions="Center"
                                                                     HorizontalOptions="Center">
                                                    <Button x:Name="AddProject"
                                                            Text="+"
                                                            FontSize="40"
                                                            WidthRequest="80"
                                                            HeightRequest="80"
                                                            CornerRadius="10"
                                                            HorizontalOptions="Center"
                                                            VerticalOptions="Center"
                                                            BackgroundColor="Transparent"
                                                            BorderColor="Black"
                                                            BorderWidth="2"
                                                            Clicked="AddProject_Clicked"/>
                                                </VerticalStackLayout>
                                            </Frame>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>

                                <DataTrigger TargetType="ContentView"
                                             Binding="{Binding IsAddButton}"
                                             Value="False">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Frame WidthRequest="250"
                                                   HeightRequest="250"
                                                   Margin="10"
                                                   BorderColor="LightGray"
                                                   CornerRadius="12">
                                                <Grid RowDefinitions="Auto, *, Auto" Padding="8">
                                                    <VerticalStackLayout>
                                                        <Label Text="{Binding ProjektiNimi}" 
                                                               FontAttributes="Bold"
                                                               FontSize="Medium"
                                                               Grid.Row="0"/>
                                                        <!--Ei laiteta kuvausta varmaan tähän näkyviin-->
                                                        <!--<Label Text="{Binding KuvausTeksti}" FontSize="Small" LineBreakMode="TailTruncation"/>-->

                                                        <!--Tehtävälista-->
                                                        <CollectionView ItemsSource="{Binding NakymanTehtavat}"
                                                                        Grid.Row="1"
                                                                        HeightRequest="150">
                                                            <CollectionView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <HorizontalStackLayout>
                                                                        <CheckBox IsChecked="{Binding OnValmis, Mode=TwoWay}"
                                                                                  VerticalOptions="Center"
                                                                                  Scale="0.8"/>
                                                                        <Label Text="{Binding TehtavaNimi}"
                                                                               FontSize="Micro"
                                                                               VerticalOptions="Center"/>
                                                                    </HorizontalStackLayout>
                                                                </DataTemplate>
                                                            </CollectionView.ItemTemplate>
                                                        </CollectionView>
                                                        <!-- Alapalkki: valmius vasemmalle, loppupvm oikealle -->
                                                        <Grid Grid.Row="2"
                                                              VerticalOptions="End"
                                                              HorizontalOptions="Fill"
                                                              Margin="0,10,0,0">
                                                            
                                                            <!-- Valmius vasemmalle -->
                                                            <Label Text="{Binding ValmiusTeksti}"
                                                                   TextColor="Gray"
                                                                   FontSize="12"
                                                                   HorizontalOptions="Start"
                                                                   VerticalOptions="End"/>

                                                            <!-- Loppupäivä oikealle -->
                                                            <Label Text="{Binding Loppupvm, StringFormat='{0:dd.MM.yyyy}'}"
                                                                   TextColor="Gray"
                                                                   FontSize="12"
                                                                   HorizontalOptions="End"
                                                                   VerticalOptions="End"/>
                                                        </Grid>
                                                    </VerticalStackLayout>
                                                </Grid>
                                            </Frame>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </ContentView.Triggers>
                        </ContentView>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>